{
  "permissions": {
    "allow": [
      "Read(**)",
      "Write(./**)",
      "Edit(./**)",
      "Glob(**)",
      "Grep(**)",
      "Bash",
      "mcp__*",
      "Task(*)",
      "WebFetch",
      "WebSearch",
      "TodoWrite",
      "AskUserQuestion",
      "NotebookEdit(./**)"
