{
  "permissions": {
    "allow": [
      "Read(**)",
      "Write(./**)",
      "Edit(./**)",
      "Glob(**)",
      "Grep(**)",
      "Bash",
      "mcp__*",
      "mcp__associates-tools__*",
      "mcp__cloud-associates__*",
      "mcp__plugin_playwright_playwright__*",
      "mcp__n8n-mcp__n8n_create_workflow",
      "mcp__n8n-mcp__n8n_update_partial_workflow",
      "mcp__n8n-mcp__n8n_test_workflow",
      "mcp__n8n-mcp__n8n_autofix_workflow",
      "mcp__n8n-mcp__n8n_executions",
      "mcp__n8n-mcp__n8n_workflow_versions",
      "Task(*)",
      "Skill(*)",
      "WebFetch",
      "WebSearch",
      "TodoWrite",
      "AskUserQuestion",
      "NotebookEdit(./**)"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(rm -rf /:*)",
      "Bash(rm -rf ~:*)",
      "Bash(mkfs:*)",
      "Bash(dd if=:*)",
      "mcp__claude_ai_*"
    ]
  },
  "extraKnownMarketplaces": {
    "mira-plugins": {
      "source": {
        "source": "directory",
        "path": "~/ops/mira/.claude/plugins"
      }
    }
  },
  "enabledPlugins": {
    "kiosk@mira-plugins": true,
    "playwright@claude-plugins-official": true
  }
}
